
<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Creat Book' %>
<% end %>

<td><%= link_to "show",book_path(@book.id)%></td>
  <td><%= link_to "edit",edit_book_path(@book.id)%></td>
  <td><%= link_to "destroy",books_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>