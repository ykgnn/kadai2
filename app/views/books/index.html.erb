<h1>Books</h1>

<% @book.each do |book| %>

<table>
  <thead>
    <tr><th>タイトル</th><th>Body</th><th colspan="3"></th></tr>
  </thead>
  
 <td><span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
  </td>
  <td> <span>
    <%= link_to book.body, book_path(book.id) %>
  </span></td>
    </table>
    <td><%= link_to "show",book_path(book)%></td>
  <td><%= link_to "edit",edit_book_path(book.id)%></td>
  <td><%= link_to "destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
<% end %>


<h1>New book</h1>


<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Creat Book'%>
<% end %>