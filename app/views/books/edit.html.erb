<h1>編集画面</h1>

<%= form_with model: @book do |f| %>


  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'update book'%>
  <% book_path @book ,method: :patch, "confirm" => "更新します"%>
  <%= link_to "show",book_path(@book.id)%>
  <%= link_to "back",books_path(@book.id)%>
  
  <% end %>
  